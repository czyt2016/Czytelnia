@model Repository.Models.Ksiazka

@{
    ViewBag.Tytul = "Usuń książkę nr" + Model.Id;
    ViewBag.Opis = "Usuń książkę nr" + Model.Id;
    ViewBag.SlowaKluczowe = "książka, " + Model.Id + ", lista, czytelnia";
}

<h2>Usuń książkę nr @Model.Id</h2>
<div class="container">
    <div class="col-md-5">
        <!-- Jeśli ViewBag będzie miał wartość true, to znaczy, że trzeba wyświetlić komunikat o błędzie.
            Dymek z czerwonym tłem utwórz za pomocą Bootstrapa i klasy alert alert-danger. -->
        @if (ViewBag.Blad == true)
        {
            <div class="alert alert-danger" role="alert">
                Wystąpił błąd podczas usuwania.<br />
                Spróbuj ponownie.
            </div>
        }

        <h3>Czy na pewno chcesz usunąć?</h3>
        <div>
            <h4>Ksiazka</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Czytelnik.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Czytelnik.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Autor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Autor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Tytul)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tytul)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Gatunek)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Gatunek)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.RokWydania)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RokWydania)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DataDodania)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DataDodania)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Usuń" class="btn btn-danger confirmation" /> |
                    @Html.ActionLink("Wróć", "Index", null, new { @class = "btn btn-info" })

                </div>
            }
        </div>
    </div>
    <img src="~/Content/Images/bookDelete.jpg" style="PADDING-TOP: 30px;" />
</div>
        <!-- dodanie okienka JavaScript pytającego o potwierdzenie usunięcia -->
        @section Scripts{
            <script type="text/javascript">
                $('.confirmation').on('click', function () {
                    return confirm('Czy na pewno chcesz usunąć?');
                });
            </script>
        }
